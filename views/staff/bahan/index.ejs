<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <h1 class="h3 mb-4 text-gray-800">Kelola Bahan</h1>
  <table id="dataTable" class="table table-borderless fa-fw col-lg-4">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Bahan</th>
        <th scope="col">Stok</th>
      </tr>
    </thead>
    <tbody>
      <% result.forEach((data,i) =>{%> <% if(data.stok <= 10){ %>
      <tr class="col-sm-10 alert alert-danger">
        <th scope="row"><%= i+1 %></th>
        <td><%= data.name %></td>
        <td><%= data.stok %></td>
      </tr>
      <% }else{ %>

      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= data.name %></td>
        <td><%= data.stok %></td>
      </tr>
      <% } %> <%}) %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-lg-6">
      <form action="/bahan/add" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="current_password">Nama Bahan</label>
          <select class="custom-select" name="id">
            <% result.forEach(data =>{%>
            <option value="<%= data.id %> "><%= data.name %></option>
            <%}) %>
          </select>
        </div>
        <div class="form-group">
          <label for="stok">Jumlah</label>
          <input
            type="text"
            class="form-control"
            id="stok"
            name="stok"
            onkeypress="return number(event)"
          />
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Simpan</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- /.container-fluid -->
