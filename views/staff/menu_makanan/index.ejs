
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Bahan</h1>
        <a href="/makanan/create" class="btn btn-success btn-user btn-block col-lg-1 ml-auto"><i class="fas fa-plus"></i></a>
    <table id="dataTable" class="table table-borderless fa-fw col-lg-12">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Harga</th>
          <th scope="col">Gambar</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
          <% result.forEach((data,i) => { %>  
        <tr>
          <th scope="row"><%= i+1 %><t+1>
          <td><%= data.name%></td>
          <td><%= data.harga%></td>
          <td><img
            src="<%= `/uploads/${data.foto}` %>"
            alt="pict"
            width="80"
            height="80"
          /></td>
          <td>
            <a href="/makanan/update/<%= data.id %>" class="btn btn-primary"><i class="fas fa-search"></i></a>
            <a href="/makanan/delete/<%= data.id %>" class="btn btn-danger"><i class="fas fa-trash"></i></a>
            <a href="/makanan/info/<%= data.id %>" class="btn btn-info"><i class="fas fa-ellipsis-h"></i></a>
          </td>
        </tr>
        <%}) %>
      </tbody>
    </table>
  </div>
  <!-- /.container-fluid -->
  